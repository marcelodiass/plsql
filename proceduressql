CREATE TABLE PRODUTO (ID NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
                        NOME VARCHAR2(30),
                        TIPO VARCHAR2(30),
                        MARCA VARCHAR2(30));

DECLARE
    p_nome  produto.nome%TYPE := 'Teclado';
    p_tipo  produto.tipo%TYPE := 'Periférico';
    p_marca produto.marca%TYPE := 'Razer';
BEGIN
    INSERT INTO produto (
        nome,
        tipo,
        marca
    ) VALUES (
        p_nome,
        p_tipo,
        p_marca
    );
    COMMIT;
END;
